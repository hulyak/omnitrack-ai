# AWS Configuration for Staging Environment
AWS_ACCOUNT_ID=123456789012
AWS_REGION=us-east-1

# Environment
ENVIRONMENT=staging

# Stack Configuration
STACK_NAME=omnitrack-ai-staging

# DynamoDB Configuration
DYNAMODB_BILLING_MODE=PAY_PER_REQUEST

# Lambda Configuration
LAMBDA_MEMORY_SIZE=1024
LAMBDA_TIMEOUT=30

# API Gateway Configuration
API_THROTTLE_RATE_LIMIT=1000
API_THROTTLE_BURST_LIMIT=2000

# Alert Email Configuration
CRITICAL_ALERT_EMAIL=oncall-staging@example.com
TEAM_ALERT_EMAIL=team-staging@example.com

# Redis Configuration
REDIS_NODE_TYPE=cache.t3.micro
REDIS_NUM_NODES=1

# Monitoring Configuration
LOG_RETENTION_DAYS=30
ENABLE_XRAY_TRACING=true

# Security Configuration
ENABLE_WAF=true
ENABLE_KMS_ENCRYPTION=true
